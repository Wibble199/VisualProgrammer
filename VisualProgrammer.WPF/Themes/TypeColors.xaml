<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:VisualProgrammer.WPF"
					xmlns:sys="clr-namespace:System;assembly=System.Runtime">
	
	<!-- We want a dictionary dedicated to type colors so that we don't have a key collision with any other types -->
	<ResourceDictionary x:Key="{ComponentResourceKey {x:Type local:VisualProgramEditor}, NodeColors}">
		<Color x:Key="{x:Type sys:Int32}">#44AE90</Color>
		<Color x:Key="{x:Type sys:Double}">#42759F</Color>
		<Color x:Key="{x:Type sys:String}">#5E9B4E</Color>
		<Color x:Key="{x:Type sys:Boolean}">#AE4444</Color>
	</ResourceDictionary>
</ResourceDictionary>