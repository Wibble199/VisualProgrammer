<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:VisualProgrammer.WPF.InputField"
					xmlns:sys="clr-namespace:System;assembly=System.Runtime">

	<DataTemplate x:Key="{ComponentResourceKey {x:Type local:InputFieldDynamic}, {x:Type sys:String}}">
		<TextBox Text="{Binding Path=Value, Mode=TwoWay}" />
	</DataTemplate>

	<DataTemplate x:Key="{ComponentResourceKey {x:Type local:InputFieldDynamic}, {x:Type sys:Int32}}">
		<!-- Need a custom numeric stepper control. Do not want to add Xceed incase users of this library override these
			 controls and then there would be a dependency on Xceed when it's not actually being used. -->
		<TextBlock Text="TODO" />
	</DataTemplate>

	<DataTemplate x:Key="{ComponentResourceKey {x:Type local:InputFieldDynamic}, {x:Type sys:Double}}">
		<TextBlock Text="TODO" />
	</DataTemplate>

	<DataTemplate x:Key="{ComponentResourceKey {x:Type local:InputFieldDynamic}, {x:Type sys:Boolean}}">
		<CheckBox IsChecked="{Binding Path=Value, Mode=TwoWay}" />
	</DataTemplate>
</ResourceDictionary>