<Window x:Class="DemoWPFApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoWPFApp"
        xmlns:vp="clr-namespace:VisualProgrammer.WPF;assembly=VisualProgrammer.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <vp:VisualProgramEditor Program="{Binding Program}" />
		<Button Content="Execute" VerticalAlignment="Bottom" HorizontalAlignment="Right" Padding="4" Margin="8" Click="Button_Click" />
	</Grid>
</Window>
