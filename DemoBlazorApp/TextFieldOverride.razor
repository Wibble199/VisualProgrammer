@attribute [VisualProgrammer.Blazor.InputField.InputFieldControl(typeof(string))]

<!-- This control demonstrates being able to override default input fields with custom ones -->

<input type="text" placeholder="Hello" value="@Value" @oninput="e => ValueChanged.InvokeAsync(e.Value.ToString())" style="background:transparent;color:black" />

@code {
    [Parameter] public string Value { get; set; }
    [Parameter] public EventCallback<string>
    ValueChanged { get; set; }
}
